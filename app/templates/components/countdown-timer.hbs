{{#if countdown.countdownFinished}}
  <p class="small-text align-center">Yay!!! You did it. Tune in tomorrow for another prompt.</p>
  <h2 class="large-text">DONEZO!</h2>
  <span class="circle circle-top"></span>
  <span class="circle circle-top-middle"></span>
  <span class="circle circle-top-right"></span>
  <span class="circle circle-bottom-left"></span>
  <span class="circle circle-bottom-middle"></span>
  <span class="circle circle-bottom-right"></span>
  <p class="small-text align-right">#promptmeXYZ</p>

  {{falling-shapes}}

{{else}}
  <div class="remaining-time__container">
    {{#if countdown.showingTimer}}
      <div class="remaining-time">{{remainingTime}}</div>
    {{/if}}
    <p class="prompt">{{countdown.prompt}}</p>

    <object type="image/svg+xml" data="/countdown-shapes.svg"class="countdown-shapes"></object>
  </div>

{{/if}}